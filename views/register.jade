      .form-group
        input.form-control(type= 'text', name="organization", placeholder= 'Enter your Organization Name') 
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
    br
